{
  "name": "uob-forms",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Jonathan Phoon <jonathan.pwh@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "BABEL_ENV=dev webpack-dev-server --hot --inline --watch --host 0.0.0.0",
    "build": "jest && webpack -p --progress --env=prod",
    "test": "yarn lint && jest",
    "test:dev": "jest",
    "test:watch": "npm test -- --watch",
    "cov": "jest --coverage",
    "lint": "eslint src"
  },
  "dependencies": {
    "immutable": "^3.8.1",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-immutable-proptypes": "^2.1.0",
    "react-redux": "^5.0.3",
    "react-router-redux": "^4.0.8",
    "redux": "^3.6.0",
    "redux-immutable": "^3.1.0"
  },
  "devDependencies": {
    "babel-core": "^6.23.1",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.4.0",
    "babel-plugin-async-to-promises": "^1.0.5",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-react": "^6.23.0",
    "babel-preset-react-hmre": "^1.1.1",
    "browser-sync": "^2.18.8",
    "browser-sync-webpack-plugin": "^1.1.4",
    "css-loader": "^0.26.4",
    "eslint": "^3.17.1",
    "eslint-loader": "^1.6.3",
    "eslint-plugin-react": "^6.10.0",
    "file-loader": "^0.10.1",
    "html-loader": "^0.4.5",
    "html-webpack-plugin": "^2.28.0",
    "jest": "^19.0.2",
    "jest-css-modules": "^1.1.0",
    "postcss-loader": "^1.3.3",
    "react-addons-test-utils": "^15.4.2",
    "style-loader": "^0.13.2",
    "uglify-js": "^2.8.10",
    "uglifyjs-webpack-plugin": "^0.3.0",
    "webpack": "^2.2.1",
    "webpack-dev-server": "^2.4.1"
  },
  "jest": {
    "collectCoverageFrom": [
      "**/*.{js,jsx}"
    ],
    "coverageDirectory": "./coverage/",
    "coveragePathIgnorePatterns": [
      "./coverage",
      "webpack.config.js"
    ],
    "notify": true,
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/config/jest-file.js",
      "\\.(css|less)$": "<rootDir>/node_modules/jest-css-modules"
    }
  }
}
